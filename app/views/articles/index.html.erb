<h1>Welcome to Shopify Encyclopedia</h1>
<h2>All Articles: </h2>

<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Descriptiion</th>
            <th>Author</th>
            <th>Date</th>
        </tr>
    </thead>

    <tbody>
        <% @articles.each do |article|%>
        <tr> 
            <td><%=article.title %></td>
            <td><%=article.content %></td>
            <td><%=article.author %></td>
            <td><%=article.date %></td>
        </tr>
        <% end %>
    </tbody>
</table>